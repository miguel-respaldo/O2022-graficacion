Proceso Algoritmo_par_o_no
	
	//Pedir el número
	
	Escribir "Ingresa un número"
	Leer num
	
	//Determinar si es par o impar
	
	si num % 2 = 0 Entonces
		Escribir "El numero es par"
	SiNo
		Escribir "El numero es impar"
	FinSi
	
FinProceso
